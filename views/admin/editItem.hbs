{{#each data}}
  <form action="edit-item?id={{this._id}}" method="post">
    <input
      type="text"
      value="{{this.id}}"
      readonly
      hidden
      name="id"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="name" class="form-label mt-3">Name</label>
    <input
      type="text"
      value="{{this.name}}"
      readonly
      name="name"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="category" class="form-label mt-1">Category</label>
    <input
      type="text"
      value="{{this.category}}"
      readonly
      name="category"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="status" class="form-label mt-1">Status</label>
    <input
      type="text"
      value="{{this.status}}"
      name="status"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="type" class="form-label mt-1">Type</label>
    <input
      type="text"
      value="{{this.type}}"
      readonly
      name="type"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="stage" class="form-label mt-1">Stage</label>
    <input
      type="text"
      value="{{this.stage}}"
      name="stage"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="start" class="form-label mt-1">Start At</label>
    <input
      type="text"
      value="{{this.start}}"
      name="start"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="time" class="form-label mt-1">Maximum Time</label>
    <input
      type="text"
      value="{{this.time}}"
      readonly
      name="time"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <label for="participant" class="form-label mt-1">Maximum Participant</label>
    <input
      type="text"
      value="{{this.participant}}"
      readonly
      name="participant"
      class="form-control"
      aria-describedby="passwordHelpBlock"
    />
    <input type="submit" value="Update" class="btn btn-primary mt-3" />
  </form>
{{/each}}

