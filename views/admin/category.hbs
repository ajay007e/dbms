<div class="d-grid gap-2 d-md-flex justify-content-md-end m-3">
  <a
    type="button"
    href="category/add"
    class="btn btn-primary btn-lg m-3 right-3 text-right fs-6"
  >Add New Category</a>

</div>

<div class="m-5">
  <table class="table text-center">
    <thead>
      <tr>
        <th scope="col">Section</th>
        <th scope="col">Type</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <th>{{this.section}}</th>
          <td>{{this.type}}</td>
          <td><a
              href="category/delete?id={{this._id}}"
              type="button"
              class="btn btn-danger"
            >Delete</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>